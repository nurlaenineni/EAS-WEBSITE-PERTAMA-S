from flask import Flask

# Membuat instance aplikasi Flask
app = Flask(__name__)

# Konfigurasi aplikasi (opsional, bisa ditambahkan sesuai kebutuhan)
app.config['SECRET_KEY'] = 'mysecretkey'
app.config['DEBUG'] = True  # Aktifkan mode debug untuk pengembangan

# Mengimpor routes setelah app dibuat
from app import routes

from flask import Flask
from app.routes import main  # Mengimpor blueprint dari routes.py

app = Flask(__name__)
app.config['SECRET_KEY'] = 'mysecretkey'

# Mendaftarkan Blueprint
app.register_blueprint(main)
